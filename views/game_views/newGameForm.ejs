<html>

<head>
  <title>
    <%= title %>
  </title>
  <link rel="stylesheet" href="/styles.css">
</head>

<body>
  <!-- < %- include('partials/navbar', {links}) %> -->
  <form method="POST" action="/game/new">
    <h1>Add a new game</h1>
    <input name="title" type="text" placeholder="Title">
    <input name="release_year" type="number" placeholder="Release Year">
    <input name="min_players" type="number" placeholder="Min. Players">
    <input name="max_players" type="number" placeholder="Max. Players">
    <input name="image_url" type="text" placeholder="Image URL">
    

    <fieldset>
      <legend>Platforms:</legend>
      <ul>
        <% platforms.forEach(platform=> {%>
          <li>
            <label for=<%=platform.id %> ><%= platform.name %></label>
            <input type="checkbox" id=<%=platform.id %> name="platforms" value=<%= platform.id %> />
          </li>
          <%}); %>
      </ul>
    </fieldset>

    <fieldset>
      <legend>Tags:</legend>
      <ul>
        <% tags.forEach(tag=> {%>
          <li>
            <label for=<%=tag.id %> ><%= tag.name %></label>
            <input type="checkbox" id=<%=tag.id %> name="tags" value=<%= tag.id %> />
          </li>
          <%}); %>
      </ul>
    </fieldset>


    <button type="submit">Submit</button>
  </form>
</body>

</html>